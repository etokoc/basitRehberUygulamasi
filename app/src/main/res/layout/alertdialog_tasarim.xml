<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İşlem Seçiniz"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        android:layout_gravity="left"/>

    <TextView

        android:textStyle="bold"
        android:textColor="@color/BackgroundSecond"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:id="@+id/alertDialogDetay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KİŞİ DETAYINI GÖR" />

    <TextView

        android:textStyle="bold"
        android:textColor="@color/BackgroundSecond"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:id="@+id/alertDialogDuzenle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KİŞİYİ DÜZENLE"/>

    <TextView
        android:textStyle="bold"
        android:textColor="@color/BackgroundSecond"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:id="@+id/alertDialogSil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KİŞİYİ SİL"/>

</LinearLayout>