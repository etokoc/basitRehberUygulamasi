<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:id="@+id/linear_rehber_detay">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Kişi Detay"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edittxt_detay_kisiAdSoyad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:hint="Kişi Ad Soyad" />

    <EditText
        android:id="@+id/edittxt_detay_kisiTelefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:hint="Telefon No" />


    <EditText
        android:id="@+id/edittxt_detay_kisiMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:hint="Mail" />


    <EditText
        android:id="@+id/edittxt_detay_kisiNot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:hint="Kişi Hakkında  Not" />

    <EditText
        android:id="@+id/edittxt_detay_DogumTarihi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:hint="Kişi Doğum Tarihi" />
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_duzenle_kayitTarihi"
        android:text="@string/kayitTarihi"/>


</LinearLayout>