<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:id="@+id/linear_rehber_ekleme">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kişi Kayıt"
        android:gravity="center"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/edittxt_kisiAdSoyad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kişi Ad Soyad"/>

    <EditText
        android:id="@+id/edittxt_kisiTelefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefon No"/>


    <EditText
        android:id="@+id/edittxt_kisiMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mail"/>


    <EditText
        android:id="@+id/edittxt_kisiNot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kişi Hakkında  Not"/>
    <EditText
        android:id="@+id/edittxt_DogumTarihi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kişi Doğum Tarihi"/>

    <Button
        android:id="@+id/buttonKisiKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kişiyi Kaydet"
        android:layout_gravity="right"/>


</LinearLayout>